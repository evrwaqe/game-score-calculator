generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String?
  avatar       String?
  isSupporter  Boolean       @default(false)
  calculations Calculation[]
  createdAt    DateTime      @default(now())
}

model Calculation {
  id                   String   @id @default(uuid())
  createdAt            DateTime @default(now())
  externalGameId       Int
  gameName             String
  absoluteCinemaMoment Boolean  @default(false)
  artDirection         Int      @default(0)
  gameplay             Int      @default(0)
  audio                Int      @default(0)
  soundtrack           Int      @default(0)
  accessibility        Int      @default(0)
  performance          Int      @default(0)
  polish               Int      @default(0)
  finalScore           Int
  user                 User     @relation(fields: [userId], references: [id])
  userId               String
}
