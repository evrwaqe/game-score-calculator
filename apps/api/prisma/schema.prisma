generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String?
  avatar       String?
  calculations Calculation[]
  createdAt    DateTime      @default(now())
}

model Calculation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  gameName  String
  score     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
