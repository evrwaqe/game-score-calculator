  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^11.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "turbo": "^2.5.3"
  },
  "lint-staged": {
    "apps/web/src/**/*.{js,jsx,ts,tsx}": [
      "npm --workspace apps/web run lint"
